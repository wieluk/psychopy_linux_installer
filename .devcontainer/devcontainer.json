// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
    "name": "Ubuntu 22 with PsychoPy",
    "image": "mcr.microsoft.com/devcontainers/base:jammy",
    "features": {
        "ghcr.io/lukewiwa/features/shellcheck:0": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "mads-hartmann.bash-ide-vscode",
                "formulahendry.code-runner",
                "timonwong.shellcheck",
                "ms-vscode.powershell"
            ]
        }
    },
    "onCreateCommand": "sudo apt-get update && sudo apt-get install -y python3-pip && sudo pip3 install bashate",
    "postCreateCommand": "chmod +x psychopy_linux_installer && ./psychopy_linux_installer -f --non-interactive --additional-packages=pytest --disable-shortcut"
}
