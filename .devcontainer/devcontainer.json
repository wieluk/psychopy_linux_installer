// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
    "name": "Ubuntu 24 with psychopy_linux_installer environment",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ],
    "features": {
        "ghcr.io/lukewiwa/features/shellcheck:0": {}
    },
    "remoteUser": "vscode",
    "customizations": {
        "vscode": {
            "extensions": [
                "mads-hartmann.bash-ide-vscode",
                "timonwong.shellcheck",
                "foxundermoon.shell-format",
                "leosj29.bash-sh-runner",
                "davidanson.vscode-markdownlint",
                "vscode-icons-team.vscode-icons",
                "github.vscode-github-actions",
                "github.vscode-pull-request-github",
                "donjayamanne.githistory"
            ]
        }
    },
    "postCreateCommand": "sudo chmod +x test/*.sh && sudo chmod +x .devcontainer/.pre_commit.sh && sudo ln -sf /workspaces/psychopy_linux_installer/.devcontainer/.pre_commit.sh /workspaces/psychopy_linux_installer/.git/hooks/pre-commit && git config --global --add safe.directory /workspaces/psychopy_linux_installer"
}